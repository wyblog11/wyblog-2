#sidebar
  #sidebar-menus
    /* 手机侧栏菜单展开 信息、头像位置调整*/
    .site-data
      margin-top: 0.5rem
    #sidebar-avatar
      margin-top: 0.2rem
      /* 作者名 */
      .author-info__name
        font-weight: 500
        font-size: 1.57em
    /* 手机侧栏菜单展开 follow_me按钮*/
    #card-info-btn
      display: block
      margin: 0.3rem 1rem 0 1rem
      background-color: var(--btn-bg)
      color: var(--btn-color)
      text-align: center
      line-height: 2.4
      overflow: hidden
      border-radius: 0.625rem
    /* 手机侧栏菜单展开 社交图标 */
    .menu-info-social-icons
      margin: 0.5rem 0 0 0
      .social-icon
        display: inline
        padding: 0 0.7rem 0 0.7rem
#sidebar
  #sidebar-menus
    background: linear-gradient(60deg, #ffd7e4 0%, #c8f1ff 100%)

[data-theme="dark"]
  #sidebar
    #sidebar-menus
      background: linear-gradient(60deg, #2c0c16 0%, #043749 100%)
#sidebar
  #sidebar-menus
    .simply-cha-top
      margin: 0 0 -3rem 0
      height: 4rem
      background: url("/img/simplycha-top.png")
      background-size: contain
      background-repeat: no-repeat
      background-position: 100% 0%
    .simply-cha
      margin-top: -4rem
      height: 5rem
      background: url("/img/simplycha.png")
      background-size: contain
      background-repeat: no-repeat
#sidebar
  #sidebar-menus
    .fas.fa-chevron-down.expand
      display: none
@media screen and (max-width: 900px)
  #aside-content
    display: none
